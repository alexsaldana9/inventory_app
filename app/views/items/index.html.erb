

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Item name</th>
      <th>Date RECEIVED</th>
      <th>Manufacturer</th>
      <th>Lot number</th>
      <th>Expiration date</th>
      <th>Quantity</th>
      <th>Purity</th>
      <th>Storage</th>
      <th>Disposal date</th>
      <th>Area use</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_name %></td>
        <td><%= item.date_received.strftime("%m/%d/%Y") %></td>
        <td><%= item.manufacturer %></td>
        <td><%= item.lot_number %></td>
        <td><%= item.expiration_date.strftime("%m/%d/%Y") %></td>
        <td><%= item.quantity %></td>
        <td><%= item.purity %></td>
        <td><%= item.storage %></td>
        <td><%= item.disposal_date_str %></td>
        <td><%= item.area_use %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

